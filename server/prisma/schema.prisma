generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Service {
  delivery
  pick_up
  payment
}

model Lead {
  id        Int           @id @default(autoincrement())
  name      String
  email     String
  mobile    String
  postcode  String
  createdAt DateTime      @default(now())
  services  LeadService[]
}

model LeadService {
  id      Int     @id @default(autoincrement())
  lead    Lead    @relation(fields: [leadId], references: [id])
  leadId  Int
  service Service
}
